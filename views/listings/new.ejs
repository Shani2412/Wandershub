<% layout('/layouts/boilerplate') %>

<div class="row mt-4">
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger col-6 offset-3 text-center" role="alert">
      <%= error %>
    </div>
  <% } %>
</div>

<div class="row">
  <div class="col-8 offset-2">
    <form action="/listings" method="POST" novalidate class="needs-validation">
      <br>
      <h1 class="text-center">Create a new listing</h1>

      <div class="mb-3">
        <label class="form-label">Enter Title</label>
        <input type="text" name="listing[title]" class="form-control" required>
        <div class="invalid-feedback">Please enter valid title</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Enter Description</label>
        <input type="text" name="listing[description]" class="form-control" required>
        <div class="invalid-feedback">Please enter valid description</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Enter Image URL</label>
        <input type="text" name="listing[image]" class="form-control">
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label">Enter Price</label>
          <input type="number" name="listing[price]" class="form-control" required>
          <div class="invalid-feedback">Please enter valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label class="form-label">Enter Location</label>
          <input type="text" name="listing[location]" class="form-control" required>
          <div class="invalid-feedback">Please enter valid location</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label">Enter Country</label>
        <input type="text" name="listing[country]" class="form-control" required>
        <div class="invalid-feedback">Please enter valid country</div>
      </div>

      <button type="submit" class="btn btn-dark">Create</button>
      <br><br>
    </form>
  </div>
</div>
