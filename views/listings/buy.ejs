<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row">
    <div class="col-8 offset-2">

      <h3 class="mb-3">Buyer Details</h3>

      <div class="card mb-4">
        <div class="card-body">
          <h5><%= listing.title %></h5>
          <p>
            <b>Price:</b> â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
            <b>Location:</b> <%= listing.location %><br>
            <b>Country:</b> <%= listing.country %>
          </p>
        </div>
      </div>

      <form action="/listings/<%= listing._id %>/buy" method="POST">

        <div class="mb-3">
          <label class="form-label">Full Name</label>
          <input
            type="text"
            name="name"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Address</label>
          <textarea
            name="address"
            rows="3"
            class="form-control"
            required
          ></textarea>
        </div>

        <button type="submit" class="btn btn-success">
          Send Purchase Request
        </button>

        <a href="/listings/<%= listing._id %>" class="btn btn-secondary ms-2">
          Cancel
        </a>
      </form>

    </div>
  </div>
</div>
