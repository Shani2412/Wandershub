<% layout('/layouts/admin') %>

<div class="dashboard-header mb-5">
  <h2>Admin Dashboard</h2>
  <p>Platform performance overview</p>
</div>

<div class="row g-4">

  <!-- USERS -->
  <div class="col-lg-4 col-md-6">
    <a href="/admin/users" class="stat-link">
      <div class="stat-box users">
        <div>
          <span>Total Users</span>
          <h1><%= totalUsers %></h1>
        </div>
        <i class="bi bi-people"></i>
      </div>
    </a>
  </div>

  <!-- LISTINGS -->
  <div class="col-lg-4 col-md-6">
    <a href="/admin/listings" class="stat-link">
      <div class="stat-box listings">
        <div>
          <span>Total Listings</span>
          <h1><%= totalListings %></h1>
        </div>
        <i class="bi bi-box-seam"></i>
      </div>
    </a>
  </div>

  <!-- REVIEWS -->
  <div class="col-lg-4 col-md-6">
    <a href="/admin/reviews" class="stat-link">
      <div class="stat-box reviews">
        <div>
          <span>Total Reviews</span>
          <h1><%= totalReviews %></h1>
        </div>
        <i class="bi bi-chat-dots"></i>
      </div>
    </a>
  </div>

</div>