<% layout('/layouts/boilerplate') %>

<h2 class="mb-4">Manage Users</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for (let user of users) { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <form method="POST" action="/admin/users/<%= user._id %>?_method=DELETE">
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>